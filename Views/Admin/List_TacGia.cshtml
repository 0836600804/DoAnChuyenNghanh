@model IEnumerable<QuanLyBanSach.Models.TacGia>
@{
    ViewBag.Title = "List_TacGia";
    Layout = "~/Views/Shared/admin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Danh sách Tác giả</h1>
<p class="mb-4">
    @Html.ActionLink("Create New", "")
</p>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã Tác giả</th>
                        <th>Tên Tác giả</th>
                        <th>Số điện thoại</th>
                        <th>Tiểu sử</th>
                        <th>Địa chỉ</th>
                        <th>---------</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.MaTG)</td>
                            <td>@Html.DisplayFor(modelItem => item.TenTG)</td>
                            <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                            <td>@Html.DisplayFor(modelItem => item.TieuSu)</td>
                            <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                            <td>
                                <button onclick="window.location.href='@Url.Action("", new { id = item.MaTG })'">Edit</button>
                                <button onclick="window.location.href='@Url.Action("", new { id = item.MaTG })'">Details</button>
                                <button onclick="if(confirm('Bạn có chắc chắn muốn xóa không?')) { window.location.href='@Url.Action("", new { id = item.MaTG })' }">Xóa</button>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

