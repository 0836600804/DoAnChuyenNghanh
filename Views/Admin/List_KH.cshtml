@model IEnumerable<QuanLyBanSach.Models.KhachHang>
@{
    ViewBag.Title = "List_KH";
    Layout = "~/Views/Shared/admin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Danh sách Khách hàng</h1>
<p class="mb-4">
    @Html.ActionLink("Create New", "")
</p>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã Khách hàng</th>
                        <th>Tên Khách hàng</th>
                        <th>Ngày sinh</th>
                        <th>Giới tính</th>
                        <th>Điện thoại</th>
                        <th>Tài khoản</th>
                        <th>Mật khẩu</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Ảnh</th>
                        <th>---------</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.MaKH)</td>
                            <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                            <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                            <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                            <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                            <td>@Html.DisplayFor(modelItem => item.TaiKhoan)</td>
                            <td>@Html.DisplayFor(modelItem => item.MatKhau)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.AnhBia)*@
                                <img src="~/Content/images/sach/@item.AnhBia" width="100px" height="120px" />
                            </td>
                            <td>
                                <button onclick="window.location.href='@Url.Action("", new { id = item.MaKH })'">Edit</button>
                                <button onclick="window.location.href='@Url.Action("", new { id = item.MaKH })'">Details</button>
                                <button onclick="if(confirm('Bạn có chắc chắn muốn xóa không?')) { window.location.href='@Url.Action("Delete_KH", new { id = item.MaKH })' }">Xóa</button>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

