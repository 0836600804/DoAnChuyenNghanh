@model QuanLyBanSach.Models.DanhMuc

@{
    ViewBag.Title = "Edit_DM";
    Layout = "~/Views/Shared/admin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Chỉnh sửa Danh mục</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin Danh mục</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.MaDM)
                @Html.EditorFor(model => model.MaDM, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.TenDM)
                @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            @Html.ActionLink("Quay lại", "List_DM", null, new { @class = "btn btn-secondary" })
        }
    </div>
</div>
