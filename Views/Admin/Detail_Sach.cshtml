@model QuanLyBanSach.Models.Sach
@{
    ViewBag.Title = "Detail_Sach";
    Layout = "~/Views/Shared/admin.cshtml";
}

<div style="display: flex;">
    <div style="flex: 1;">
        <h4>Chi tiết resort</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt><strong>Mã resort: </strong>@Html.DisplayFor(model => model.MaSach)</dt>
            <dt><strong>Mã danh mục resort: </strong>@Html.DisplayFor(model => model.DanhMuc.TenDM)</dt>
            @*<dt><strong>Mã nhà xuất bản: </strong>@Html.DisplayFor(model => model.NhaXuatBan.TenNXB)</dt>*@
            <dt><strong>Tên resort: </strong>@Html.DisplayFor(model => model.TenSach)</dt>
            <dt><strong>Đối tượng: </strong>@Html.DisplayFor(model => model.DoiTuong)</dt>
            <dt><strong>Loai KS: </strong>@Html.DisplayFor(model => model.Kho)</dt>
            <dt><strong>Tinh Thanh: </strong>@Html.DisplayFor(model => model.SoTrang)</dt>
            <dt><strong>So nguoi o: </strong>@Html.DisplayFor(model => model.TrongLuong)</dt>
            <dt><strong>Định dạng: </strong>@Html.DisplayFor(model => model.DinhDang)</dt>
            <dt><strong>Giá bán: </strong>@Html.DisplayFor(model => model.GiaBan)</dt>
            <dt><strong>Mô tả: </strong>@Html.DisplayFor(model => model.MoTa)</dt>
            <dt><strong>Ngày cập nhật: </strong>@Html.DisplayFor(model => model.NgayCapNhat)</dt>
            <dt><strong>Số lượng resort tai con trong </strong>@Html.DisplayFor(model => model.SLTon)</dt>
        </dl>
        <p>
            @Html.ActionLink("Edit", "Edit_Sach", new { id = Model.MaSach }) |
            @Html.ActionLink("Trở về", "AdminIndex")
        </p>
    </div>
    <div style="flex: 1;">
        <h4>Hình ảnh resort</h4>
        <hr />
        <img src="~/Content/sach/@Model.AnhBia" alt="Hình ảnh sách" style="max-width: 100%;">
    </div>
</div><p>
    @Html.ActionLink("Edit", "Edit_Sach", new { id = Model.MaSach }) |
    @Html.ActionLink("Trở về", "AdminIndex")
</p>

