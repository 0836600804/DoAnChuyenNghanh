@model IEnumerable<QuanLyBanSach.Models.Sach>
@{
    ViewBag.Title = "List_Sach";
    Layout = "~/Views/Shared/admin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Danh sách Sách</h1>
<p class="mb-4">
    @Html.ActionLink("Thêm mới", "Create_Sach", "Admin")
</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã Sách</th>
                        <th>Tên Sách</th>
                        <th>Đối tượng</th>
                        <th>Khổ</th>
                        <th>Số trang</th>
                        <th>Trọng lượng</th>
                        <th>Định dạng</th>
                        <th>Giá bán</th>
                        <th>Mô tả</th>
                        <th>Ngày cập nhật</th>
                        <th>Ảnh bìa</th>
                        <th>Số lượng</th>
                        <th>--------</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.MaSach)</td>
                            <td>@Html.DisplayFor(modelItem => item.TenSach)</td>
                            <td>@Html.DisplayFor(modelItem => item.DoiTuong)</td>
                            <td>@Html.DisplayFor(modelItem => item.Kho)</td>
                            <td>@Html.DisplayFor(modelItem => item.SoTrang)</td>
                            <td>@Html.DisplayFor(modelItem => item.TrongLuong)</td>
                            <td>@Html.DisplayFor(modelItem => item.DinhDang)</td>
                            <td>@Html.DisplayFor(modelItem => item.GiaBan)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.MoTa) && item.MoTa.Length > 30)
                                {
                                    @item.MoTa.Substring(0, 100)<p>...</p>
                                }
                                else
                                {
                                    @item.MoTa
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.NgayCapNhat)</td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.AnhBia)*@
                                <img src="~/Content/sach/@item.AnhBia" width="100px" height="120px" />
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.SLTon)</td>
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.MaSach }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.MaSach }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.MaSach })*@
                                <button onclick="window.location.href='@Url.Action("Edit", new { id = item.MaSach })'">Edit</button>
                                <button onclick="window.location.href='@Url.Action("Detail_Sach", new { id = item.MaSach })'">Details</button>
                                <button onclick="if(confirm('Bạn có chắc chắn muốn xóa không?')) { window.location.href='@Url.Action("Delete_Sach", new { id = item.MaSach })' }">Xóa</button>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

