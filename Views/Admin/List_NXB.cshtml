@model IEnumerable<QuanLyBanSach.Models.NhaXuatBan>
@{
    ViewBag.Title = "List_NXB";
    Layout = "~/Views/Shared/admin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Danh sách Nhà xuất bản</h1>
<p class="mb-4">
    @Html.ActionLink("Tạo mới", "Create_NXB", "Admin")
</p>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã Nhà xuất bản</th>
                        <th>Tên Nhà xuất bản</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>---------</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.MaNXB)</td>
                            <td>@Html.DisplayFor(modelItem => item.TenNXB)</td>
                            <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                            <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                            <td>
                                <button onclick="window.location.href='@Url.Action("", new { id = item.MaNXB })'">Edit</button>
                                <button onclick="window.location.href='@Url.Action("", new { id = item.MaNXB })'">Details</button>
                                <button onclick="if(confirm('Bạn có chắc chắn muốn xóa không?')) { window.location.href='@Url.Action("", new { id = item.MaNXB })' }">Xóa</button>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

